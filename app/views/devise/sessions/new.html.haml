.bg-light
  .container
    .main
      .py-5.text-center
        %h2 Sign In
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .row.mb-4
          .col-sm-4
            %label.form-label{:for => "Email"} Email
            = f.email_field :Email, autofocus: true, placeholder: 'Email', class: 'form-control'
        .row.mb-4
          .col-sm-4
            %label.form-label{:for => "password"} Password
            = f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'form-control'
        - if devise_mapping.rememberable?
          .mb-3.form-check
            = f.check_box :remember_me, class: 'form-check-input'
            %label.form-check-label{:for => "remember_me"} Remember me
        .row.mb-4
          .col-6
            = link_to 'Cancel', :back, class: "btn btn-outline-secondary"
            %button.btn.btn-primary{:type => "submit", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Log in"}} 
              Log in
        -#
          .row.mb-4
            .auth-links
              = render "devise/shared/links"
        .row.mb-4
-#
  %h2 Log in
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    %p.notice= notice
    %p.alert= alert
    .field
      = f.label :Email
      %br/
      = f.email_field :Email, autofocus: true, autocomplete: "email"
    .field
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "current-password"
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit "Log in"
  = render "devise/shared/links"
