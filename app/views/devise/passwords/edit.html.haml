.bg-light
  .container
    .main
      .py-5.text-center
        %h2 Change your password

      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = render "devise/shared/error_messages", resource: resource
        = f.hidden_field :reset_password_token
        .row.mb-4
          .col-sm-4
            %label.form-label{:for => "password"} New password
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
              %br/
            = f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control'
          .col-sm-4
            %label.form-label{:for => "password_confirmation"} Confirm new password
            = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'
        .row.mb-4
          .col-6
            %button.btn.btn-primary{:type => "submit", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Change my password"}} 
              Change my password
        .row.mb-4
