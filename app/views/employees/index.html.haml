-@title= "Employees"
= render partial: 'shared/navbars/header_navbar'
.container-fluid
  .row
    = render partial: 'shared/navbars/side_bar_menu'
    %main.col-md-9.ms-sm-auto.col-lg-10.px-md-4
      .d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pt-3.pb-2.mb-3.border-bottom
        %h1.h2 Employees
        .btn-toolbar.mb-2.mb-md-0
          .btn-group.me-2
            %button.btn.btn-sm.btn-outline-secondary{:type => "button"} Share
            %button.btn.btn-sm.btn-outline-secondary{:type => "button"} Export
          = link_to 'New', new_employee_path, class: 'btn btn-primary btn-sm'
      - unless @employees.blank?
        .table-responsive
          %table.table.table-striped.table-hover
            %thead
              %tr
                %th First Name
                %th Last Name
                %th Email
                %th Active
                %th
            %tbody
              - @employees.each do |employee|
                %tr
                  %td= employee.FirstName
                  %td= employee.LastName
                  %td= employee.Email
                  %td= employee.IsActive? ? 'Yes' : 'No'
                  %td
                    = link_to 'Show', employee, class: 'btn btn-sm btn-outline-secondary'
                    = link_to 'Edit', edit_employee_path(employee), class: 'btn btn-sm btn-primary'
                    = link_to 'Delete', employee, :method => :delete, class: 'btn btn-sm btn-danger', :data => { :confirm => 'Are you sure you want to delete this employee? It cannot be undone.' }
      - else
        %p.lead None
                