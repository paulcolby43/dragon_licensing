= form_for @employee do |f|
  - @employee.errors.each do |attr, msg|
    .alert.alert-danger.alert-dismissible
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      = "#{attr} #{msg}" if @employee.errors[attr].first == msg
  .row.mb-4
    .col-sm-4
      %label.form-label{:for => "Email"} Email
      = f.email_field :Email, class: "form-control", placeholder: 'Email', required: true
    .col-sm-4
      %label.form-label{:for => "FirstName"} First Name
      = f.text_field :FirstName, class: "form-control", placeholder: 'First Name', required: true
    .col-sm-4
      %label.form-label{:for => "LastName"} Last Name
      = f.text_field :LastName, class: "form-control", placeholder: 'Last Name', required: true
  .row.mb-4
    .col-sm-2
      %label.form-label{:for => "IsActive"} Active
      = f.check_box :IsActive
  .row.mb-4
    %hr
    .col-6
      = link_to 'Cancel', :back, class: "btn btn-outline-secondary"
      %button.btn.btn-primary{:type => "submit", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Save"}} 
        Save
  .row.mb-4